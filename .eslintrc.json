{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "class-methods-use-this": "warn",
        "id-length": "off",
        "max-lines-per-function": "off",
        "no-console": "warn",
        "no-plusplus": "off",
        "no-negated-condition": "off",
        "no-unused-vars": "warn",
        "no-useless-constructor": "warn",
        "react/no-unescaped-entities": "off",
        "sort-imports": "off"
    }
}
